/* components/popup/popup.wxss */
.popup{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
}
.popup-bg{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.6;
}
.popup-content{
  position: absolute;
  top: 46%;
  left: 50%;
  width: 80%;
  transform: translate(-50%, -50%);
  height: 200px;
  background: #fff;
}